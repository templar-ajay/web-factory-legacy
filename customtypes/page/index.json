{
  "id": "page",
  "label": "Page",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "comments_for_content_editors": {
        "type": "StructuredText",
        "config": {
          "label": "Comments for Content Editors",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "header": {
        "type": "Link",
        "config": {
          "label": "Header",
          "select": "document",
          "customtypes": ["header"]
        }
      },
      "footer": {
        "type": "Link",
        "config": {
          "label": "Footer",
          "select": "document",
          "customtypes": ["footer"]
        }
      },
      "text_color": {
        "type": "Color",
        "config": {
          "label": "Text Color",
          "placeholder": ""
        }
      },
      "background_color": {
        "type": "Color",
        "config": {
          "label": "Background Color",
          "placeholder": ""
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "call_to_action": {
              "type": "SharedSlice"
            },
            "cards": {
              "type": "SharedSlice"
            },
            "small_cards": {
              "type": "SharedSlice"
            },
            "project": {
              "type": "SharedSlice"
            },
            "partners": {
              "type": "SharedSlice"
            },
            "paragraph": {
              "type": "SharedSlice"
            },
            "hero": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
